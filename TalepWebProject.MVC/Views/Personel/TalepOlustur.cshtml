@model TalepWebProject.MVC.Models.TalepModel
@{
    ViewData["Title"] = "TalepOlustur";
    Layout = "~/Views/Shared/PersonelLayout.cshtml";

}

<body>
    <div class="tables-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-style mb-30">
                    <div class="table-wrapper table-responsive">

                        <div>
                            <div class="card mb-4">
                                <div class="card-body">
                                    <i class="fas fa-table me-1"></i>
                                    <a class="btn active-btn-outline" asp-action="TaleplerimiListele">Taleplerimi Listele</a>
                                </div>
                                <div class="card-body">
                                    @using (Html.BeginForm("TalepOlustur", "Personel", FormMethod.Post, new { role = "form" }))
                                    {
                                        <form>
                                            @Html.ValidationSummary(true)

                                            @if (ViewBag.Result != null)
                                            {
                                                <div style="color:forestgreen">@ViewBag.Result</div>
                                            }

                                            <div class="form-group">
                                                <div class="row">

                                                    <div class="col">
                                                        <label for="disabledSelect">Talep Adı</label>

                                                        @Html.TextBoxFor(a => a.TalepName, new { @class = "form-control", })
                                                        @Html.ValidationMessageFor(a => a.TalepName)
                                                    </div>
                                                    <div class="col">


                                                        <label for="disabledSelect">Talep Açıklaması</label>

                                                        @Html.TextBoxFor(a => a.TalepAcıklaması, new { @class = "form-control", Type = "text" })
                                                        @Html.ValidationMessageFor(a => a.TalepAcıklaması)
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row">

                                                <div class="col">
                                                    <label for="disabledSelect">Talep Birimi</label>
                                                    @Html.DropDownListFor(m => m.TalepBirim,
                                                   new SelectListItem[]
                                               {
                                                   new SelectListItem() { Text="Adet" ,Value="Adet"},
                                                   new SelectListItem() { Text="Kilogram" ,Value="Kilogram"},
                                                   new SelectListItem() { Text="Litre" ,Value="Litre"},
                                                    new SelectListItem() { Text="Santimetre" ,Value="Santimetre"}

                                               }, "", new { @class = "form-control", placeholder = "name" })
                                                </div>
                                                <div class="col">
                                                    <label for="disabledSelect">Talep Miktarı</label>

                                                    @Html.TextBoxFor(a => a.TalepMiktari, new { @class = "form-control", Type = "number" })
                                                    @Html.ValidationMessageFor(a => a.TalepMiktari)
                                                </div>

                                                <div class="col">
                                                    <label for="disabledSelect">Tahmini Fiyat Maliyeti</label>

                                                    @Html.TextBoxFor(a => a.TalepTahminiFiyat, new { @class = "form-control", Type = "number" })
                                                    @Html.ValidationMessageFor(a => a.TalepTahminiFiyat)
                                                </div>
                                                <div class="col">
                                                    <label for="disabledSelect">Fiyat Birimi</label>

                                                    @Html.DropDownListFor(m => m.TalepFiyatBirim,
                                                    new SelectListItem[]
                                                {
                                                    new SelectListItem() { Text="TL" ,Value="TL"},
                                                    new SelectListItem() { Text="USD" ,Value="USD"},
                                                    new SelectListItem() { Text="Euro" ,Value="Euro"}

                                                }, "", new { @class = "form-control", placeholder = "name" })


                                                </div>
                                            </div>

                                            <div class="form-group">

                                                <div class="row">
                                                    <div class="col">
                                                        <label for="disabledSelect">Şirket</label>
                                                        <select name="TalepEdenPersonelCompId" id="CompanyId" class="form-control" onchange="CompanyChangedCompany(this.value)" required>
                                                            @foreach (Personel_SirketView item in ViewBag.comList)
                                                            {
                                                                <option value="@item.CompanyId-@item.DepartId">@item.CompanyName-@item.DepartName</option>
                                                            }
                                                        </select>
                                                    </div>
                                                    <br />
                                                </div>
                                            </div>

                                            <br />
                                            <div>
                                                <input type="submit" value="Talep Oluştur" class="btn btn-primary" />

                                            </div>

                                        </form>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


