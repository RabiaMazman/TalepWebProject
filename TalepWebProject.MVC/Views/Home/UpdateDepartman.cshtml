@model TalepWebProject.MVC.Models.DepartmentsView
@{
    ViewData["Title"] = "UpdateDepartman";
}

<body>
    <div class="tables-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-style mb-30">
                    <div class="table-wrapper table-responsive">

                        <div>
                            <div class="card mb-4">
                                <div class="card-body">
                                    <i class="fas fa-table me-1"></i>
                                    <a class="btn active-btn-outline" asp-action="DepartmenList">Sirket Listele</a>
                                </div>
                                <div class="card-body">
                                    @using (Html.BeginForm("UpdateDepartman", "Home", FormMethod.Post, new { role = "form" }))
                                    {
                                    <form>
                                        @Html.ValidationSummary(true)

                                        @if (ViewBag.Result != null)
                                        {
                                            <div style="color: forestgreen">@ViewBag.Result</div>
                                        }



                                        <div class="form-group">
                                            @*<label for="disabledSelect">ID</label>*@
                                            @Html.TextBoxFor(a => a.DepartID, new { @class = "form-control", name = "DepartID" ,type="hidden"})
                                            @Html.ValidationMessageFor(a => a.DepartID)
                                        </div>

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col">

                                                    <label for="disabledSelect">    Departman Adı</label>
                                                    @Html.TextBoxFor(a => a.DepartName, new { @class = "form-control", name = "DepartName" })
                                                    @Html.ValidationMessageFor(a => a.DepartName)
                                                </div>
                                                <div class="col">
                                                    <label for="disabledSelect">Sirket Adı</label>
                                                    <select name="CompanyId" class="form-control">
                                                        @foreach (SelectListItem item in ViewBag.CompanyList)
                                                        {
                                                            <option value="@item.Value" selected="@(item)">@item.Text</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>

                                               
                                        </div>

                                            <br />
                                            <div>
                                                <input type="submit" value="Güncelle" class="btn btn-dark" />

                                            </div>

</form>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

