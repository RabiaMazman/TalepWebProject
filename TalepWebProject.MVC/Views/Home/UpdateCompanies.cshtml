@model TalepWebProject.MVC.Models.CompaniesView
@{
    ViewData["Title"] = "Home Page";
}

<body>
    <div class="tables-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-style mb-30">
                    <div class="table-wrapper table-responsive">

                        <div>
                            <div class="card mb-4">
                                <div class="card-body">
                                    <i class="fas fa-table me-1"></i>
                                    <a class="btn active-btn-outline" asp-action="CompaniesList">Sirket Listele</a>
                                </div>
                                <div class="card-body">
                                    @using (Html.BeginForm("UpdateCompanies", "Home", FormMethod.Post, new { role = "form" }))
                                    {
                                    <form>
                                        @Html.ValidationSummary(true)

                                        @if (ViewBag.Result != null)
                                        {
                                            <div style="color: forestgreen">@ViewBag.Result</div>
                                        }



                                        <div class="form-group">
                                            @*<label for="disabledSelect">ID</label>*@
                                            @Html.TextBoxFor(a => a.CompanyID, new { @class = "form-control" ,name= "CompanyID" ,type="hidden"})
                                            @Html.ValidationMessageFor(a => a.CompanyID)
                                        </div>

                                        <div class="form-group">
                                            <label for="disabledSelect">Şirket Adı</label>
                                            @Html.TextBoxFor(a => a.CompanyName, new { @class = "form-control" ,name= "CompanyName" })
                                            @Html.ValidationMessageFor(a => a.CompanyName)
                                        </div>


                                        <br />
                                        <div>
                                            <input type="submit" value="Güncelle" class="btn btn-dark" />

                                        </div>

                                    </form>
                                    }
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

