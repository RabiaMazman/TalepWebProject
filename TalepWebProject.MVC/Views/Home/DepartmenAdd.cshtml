@model TalepWebProject.MVC.Models.DepartmentsView
@{
    ViewData["Title"] = "DepartmenAdd";
}

<body>
    <div class="tables-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-style mb-30">
                    <div class="table-wrapper table-responsive">

                        <div>
                            <div class="card mb-4">
                                <div class="card-body">
                                    <i class="fas fa-table me-1"></i>
                                    <a class="btn active-btn-outline" asp-action="DepartmenList">Departman Listele</a>
                                </div>
                                <div class="card-body">
                                    @using (Html.BeginForm("DepartmenAdd", "Home", FormMethod.Post, new { role = "form" }))
                                    {
                                    <form>
                                        @Html.ValidationSummary(true)

                                        @if (ViewBag.Result != null)
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                @ViewBag.Result
                                            </div>
                                        }
                                        <div class="form-group">
                                            <label for="disabledSelect">Departman Adı</label>
                                            @Html.TextBoxFor(a => a.DepartName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(a => a.DepartName)
                                        </div>
                                        <div class="col">
                                            <label for="disabledSelect">Şirket Adı</label>
                                            @Html.DropDownListFor(a => a.CompanyId, (List<SelectListItem>)ViewBag.CompanyList, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(a => a.CompanyId)
                                        </div>
                                        <br />
                                        <div>
                                            <input type="submit" value="Departman Ekle" class="btn btn-dark" />

                                        </div>

                                    </form>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


