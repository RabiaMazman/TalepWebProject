@model List<TalepWebProject.MVC.Models.PersonelView>
@{
    ViewData["Title"] = "Home Page";
}

<body class="theme-red">

    <div class="tables-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-style mb-30">
                    <div class="table-wrapper table-responsive">

                        <div>
                            <div class="card mb-4">
                                <div class="card-body">
                                    <i class="fas fa-table me-1"></i>
                                    <a class="btn active-btn-outline" asp-action="PersonelAdd">Personel Ekle</a>
                                </div>

                                <div class="card-body">

                                    <table id="datatablesSimple" class="table table-responsive">
                                        <thead>
                                            <tr>
                                                <th>Personel Adı</th>
                                                <th>Telefon</th>
                                                <th>Email</th>
                                                <th>Yetkisi</th>
                                                <th>İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>

                                                <th>Personel Adı</th>

                                                <th>Telefon</th>
                                                <th>Email</th>
                                                <th>Yetkisi</th>
                                                <th>İşlemler</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td class="min-width">
                                                        <img src="https://localhost:44356/Photos/@item.PersonPhoto" width="30" height="40" />

                                                        @item.PersonName
                                                    </td>


                                                    <td class="min-width">
                                                        @item.PersonPhone
                                                    </td>

                                                    <td class="min-width">
                                                        @item.PersonEmail
                                                    </td>

                                                    <td class="min-width">
                                                        @item.PersonRolId
                                                    </td>



                                                  
                                                    <td class="min-width">
                                                        <a asp-action="UpdatePersonel" asp-route-id="@item.PersonID">Düzenle</a>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<form action="AktifPasifDegistir" method="post" id="DurumForm">
    <input type="hidden" name="PersonDurum" id="PersonDurum" />
</form>
<script>
    function DurumDegis(durum) {
        $("#PersonDurum").val(durum);
        $("#DurumForm").submit();
    }
</script>